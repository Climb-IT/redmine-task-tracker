{
  "manifest_version": 3,
  "name": "Redmine Task Tracker",
  "version": "1.0",
  "description": "Track your Redmine tasks directly from Chrome.",
  "action": {
    // "default_popup": "index.html",
    "default_title": "Redmine Task Tracker",
    "default_icon": "redmine.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms", "sidePanel", "notifications"],
  "host_permissions": ["<all_urls>"]
}
